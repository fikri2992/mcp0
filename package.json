{
  "name": "mcp-api-server",
  "version": "1.0.0",
  "description": "A Model Context Protocol server for making HTTP API calls",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "mcp-api-server": "dist/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "start:debug": "node dist/index.js --debug",
    "start:dev": "DEBUG=true ALLOW_LOCALHOST=true node dist/index.js",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run build",
    "test": "npm run build && npm run test:all",
    "test:all": "node dist/tests/run-all-tests.js",
    "test:validation": "node dist/tests/api-request-validation.test.js",
    "test:handlers": "node dist/tests/tool-handlers.test.js",
    "test:flow": "node dist/tests/complete-flow.test.js",
    "test:types": "node dist/tests/response-types.test.js",
    "test:validator": "node dist/tests/request-validator.test.js"
  },
  "keywords": [
    "mcp", 
    "api", 
    "http", 
    "server", 
    "typescript", 
    "model-context-protocol",
    "rest-api",
    "http-client"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/mcp-api-server.git"
  },
  "homepage": "https://github.com/yourusername/mcp-api-server#readme",
  "bugs": {
    "url": "https://github.com/yourusername/mcp-api-server/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "axios": "^1.6.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "rimraf": "^5.0.0"
  }
}
