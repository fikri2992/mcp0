{
  "name": "mcp-api-server",
  "version": "1.0.0",
  "description": "A Model Context Protocol server for making HTTP API calls",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "start:debug": "node dist/index.js --debug",
    "start:dev": "DEBUG=true ALLOW_LOCALHOST=true node dist/index.js",
    "clean": "rimraf dist",
    "prebuild": "npm run clean"
  },
  "keywords": ["mcp", "api", "http", "server", "typescript"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "axios": "^1.6.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "rimraf": "^5.0.0"
  }
}
